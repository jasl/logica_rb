<% content_for :title, "Reports" %>

<div class="container">
  <header class="header">
    <h1>logica_rb BI demo</h1>
    <nav class="nav">
      <%= link_to "Built-in reports", reports_path, class: "nav-link" %>
      <%= link_to "Custom query", new_custom_query_path, class: "nav-link" %>
    </nav>
  </header>

  <p class="muted">
    Built-in reports are file-mode queries from <code>dummy/app/logica</code>.
    Custom queries run in source-mode (<code>trusted: false</code>) and are validated as query-only before execution.
  </p>

  <ul class="report-list">
    <% @reports.each do |report| %>
      <li class="report-item">
        <div class="report-title">
          <%= link_to report.title, report_path(report.id) %>
        </div>
        <div class="muted"><%= report.description %></div>
      </li>
    <% end %>
  </ul>
</div>
